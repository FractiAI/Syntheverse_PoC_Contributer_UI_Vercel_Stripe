{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://syntheverse.local/schemas/proposal_envelope.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "proposal_id",
    "timestamp",
    "intent",
    "action_type",
    "params",
    "trace"
  ],
  "properties": {
    "proposal_id": {
      "type": "string"
    },
    "timestamp": {
      "type": "string"
    },
    "intent": {
      "type": "string"
    },
    "action_type": {
      "type": "string"
    },
    "params": {
      "type": "object"
    },
    "trace": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "run_id",
        "inputs_hash",
        "determinism"
      ],
      "properties": {
        "run_id": {
          "type": "string"
        },
        "inputs_hash": {
          "type": "string"
        },
        "determinism": {
          "type": "object",
          "additionalProperties": true,
          "required": [
            "provider",
            "model",
            "temperature",
            "prompt_hash",
            "score_config_id",
            "archive_snapshot_id"
          ],
          "properties": {
            "provider": {
              "type": "string"
            },
            "model": {
              "type": "string"
            },
            "temperature": {
              "type": "number"
            },
            "prompt_hash": {
              "type": "string"
            },
            "content_hash": {
              "type": "string"
            },
            "seed": {
              "type": [
                "number",
                "null"
              ]
            },
            "score_config_id": {
              "type": "string"
            },
            "archive_snapshot_id": {
              "type": "string"
            },
            "mode_state": {
              "type": "string"
            },
            "toggles": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "seed_on",
                "edge_on",
                "overlap_on"
              ],
              "properties": {
                "seed_on": {
                  "type": "boolean"
                },
                "edge_on": {
                  "type": "boolean"
                },
                "overlap_on": {
                  "type": "boolean"
                }
              }
            }
          }
        }
      }
    }
  }
}