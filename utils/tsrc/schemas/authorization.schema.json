{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://syntheverse.local/schemas/authorization.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "command_id",
    "projection_id",
    "issued_at",
    "lease_id",
    "lease_valid_for_ms",
    "cmd_counter",
    "kman_hash",
    "bset_hash",
    "policy_seq",
    "mode_id",
    "closure_active",
    "action_type",
    "params",
    "signature"
  ],
  "properties": {
    "command_id": {
      "type": "string"
    },
    "projection_id": {
      "type": "string"
    },
    "issued_at": {
      "type": "string"
    },
    "lease_id": {
      "type": "string"
    },
    "lease_valid_for_ms": {
      "type": "integer",
      "minimum": 0
    },
    "cmd_counter": {
      "type": "integer",
      "minimum": 0
    },
    "kman_hash": {
      "type": "string"
    },
    "bset_hash": {
      "type": "string"
    },
    "policy_seq": {
      "type": "integer",
      "minimum": 0
    },
    "mode_id": {
      "type": "string"
    },
    "closure_active": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "op",
        "d_def",
        "d"
      ],
      "properties": {
        "op": {
          "type": "string",
          "enum": [
            "axis",
            "kiss",
            "custom"
          ]
        },
        "d_def": {
          "type": "string"
        },
        "d": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "action_type": {
      "type": "string"
    },
    "params": {
      "type": "object"
    },
    "signature": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "alg",
        "canonicalization",
        "key_id",
        "payload_hash",
        "sig_b64"
      ],
      "properties": {
        "alg": {
          "type": "string",
          "enum": [
            "hmac-sha256",
            "ed25519"
          ]
        },
        "canonicalization": {
          "type": "string",
          "enum": [
            "jcs-rfc8785"
          ]
        },
        "key_id": {
          "type": "string"
        },
        "payload_hash": {
          "type": "string"
        },
        "sig_b64": {
          "type": "string"
        }
      }
    }
  }
}