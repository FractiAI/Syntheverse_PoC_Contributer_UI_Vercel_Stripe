{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://syntheverse.local/schemas/projected_command.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "projection_id",
    "proposal_id",
    "kman_hash",
    "bset_hash",
    "policy_seq",
    "mode_id",
    "closure_active",
    "action_type",
    "params",
    "risk_tier",
    "artifact_class",
    "checks_passed",
    "veto"
  ],
  "properties": {
    "projection_id": {
      "type": "string"
    },
    "proposal_id": {
      "type": "string"
    },
    "kman_hash": {
      "type": "string"
    },
    "bset_hash": {
      "type": "string"
    },
    "policy_seq": {
      "type": "integer",
      "minimum": 0
    },
    "mode_id": {
      "type": "string"
    },
    "closure_active": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "op",
        "d_def",
        "d"
      ],
      "properties": {
        "op": {
          "type": "string",
          "enum": [
            "axis",
            "kiss",
            "custom"
          ]
        },
        "d_def": {
          "type": "string"
        },
        "d": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "action_type": {
      "type": "string"
    },
    "params": {
      "type": "object"
    },
    "risk_tier": {
      "type": "integer",
      "enum": [
        0,
        1,
        2,
        3
      ]
    },
    "artifact_sink_ref": {
      "type": "string"
    },
    "artifact_class": {
      "type": "string",
      "enum": [
        "data",
        "control",
        "na"
      ]
    },
    "checks_passed": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "veto": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "is_veto",
        "reason"
      ],
      "properties": {
        "is_veto": {
          "type": "boolean"
        },
        "reason": {
          "type": "string"
        }
      }
    }
  }
}